<?php
/**
 * HeatAQ Login API
 * Handles user authentication and session management
 *
 * Usage:
 * POST with email + password â†’ Returns projects list + last_project_id
 * POST with email + password + project â†’ Creates session, returns session_id
 */

require_once __DIR__ . '/config.php';

header('Content-Type: application/json');
header('Access-Control-Allow-Origin: *');
header('Access-Control-Allow-Methods: POST, OPTIONS');
header('Access-Control-Allow-Headers: Content-Type');

if ($_SERVER['REQUEST_METHOD'] === 'OPTIONS') {
    exit(0);
}

if ($_SERVER['REQUEST_METHOD'] !== 'POST') {
    http_response_code(405);
    echo json_encode(['success' => false, 'message' => 'Method not allowed']);
    exit;
}

try {
    $pdo = Config::getDatabase();
    $sessionConfig = Config::getSessionConfig();

    // Get input
    $email = $_POST['email'] ?? '';
    $password = $_POST['password'] ?? '';
    $projectId = $_POST['project'] ?? null;

    if (empty($email) || empty($password)) {
        echo json_encode(['success' => false, 'message' => 'Email and password required']);
        exit;
    }

    // Validate user credentials
    $stmt = $pdo->prepare("
        SELECT user_id, email, name, password_hash, is_active, is_super_admin
        FROM users
        WHERE email = ?
    ");
    $stmt->execute([$email]);
    $user = $stmt->fetch(PDO::FETCH_ASSOC);

    if (!$user || !password_verify($password, $user['password_hash'])) {
        echo json_encode(['success' => false, 'message' => 'Invalid email or password']);
        exit;
    }

    if (!$user['is_active']) {
        echo json_encode(['success' => false, 'message' => 'Account is deactivated']);
        exit;
    }

    // Step 1: Return projects list (no project selected yet)
    if (!$projectId) {
        // Get user's projects
        $stmt = $pdo->prepare("
            SELECT p.project_id, p.project_name, p.site_id, up.role
            FROM user_projects up
            JOIN projects p ON up.project_id = p.project_id
            WHERE up.user_id = ? AND p.is_active = 1
            ORDER BY p.project_name
        ");
        $stmt->execute([$user['user_id']]);
        $projects = $stmt->fetchAll(PDO::FETCH_ASSOC);

        // If super admin, show all projects
        if ($user['is_super_admin']) {
            $stmt = $pdo->query("
                SELECT project_id, project_name, site_id, 'owner' as role
                FROM projects WHERE is_active = 1
                ORDER BY project_name
            ");
            $projects = $stmt->fetchAll(PDO::FETCH_ASSOC);
        }

        // Get user's last project preference (for cross-device sync)
        $lastProjectId = null;
        try {
            $stmt = $pdo->prepare("
                SELECT pref_value
                FROM user_preferences
                WHERE user_id = ? AND pref_key = 'last_project_id'
            ");
            $stmt->execute([$user['user_id']]);
            $lastProjectId = $stmt->fetchColumn();
        } catch (Exception $e) {
            // Table might not exist yet, ignore
        }

        echo json_encode([
            'success' => true,
            'projects' => $projects,
            'last_project_id' => $lastProjectId,
            'user_name' => $user['name']
        ]);
        exit;
    }

    // Step 2: Create session for selected project
    $projectId = (int)$projectId;

    // Verify user has access to this project
    $stmt = $pdo->prepare("
        SELECT up.role, p.project_name, p.site_id
        FROM user_projects up
        JOIN projects p ON up.project_id = p.project_id
        WHERE up.user_id = ? AND up.project_id = ? AND p.is_active = 1
    ");
    $stmt->execute([$user['user_id'], $projectId]);
    $projectAccess = $stmt->fetch(PDO::FETCH_ASSOC);

    // Super admin can access any project
    if (!$projectAccess && $user['is_super_admin']) {
        $stmt = $pdo->prepare("
            SELECT 'owner' as role, project_name, site_id
            FROM projects WHERE project_id = ? AND is_active = 1
        ");
        $stmt->execute([$projectId]);
        $projectAccess = $stmt->fetch(PDO::FETCH_ASSOC);
    }

    if (!$projectAccess) {
        echo json_encode(['success' => false, 'message' => 'Access denied to this project']);
        exit;
    }

    // Create session
    $sessionId = bin2hex(random_bytes(32));
    $expiresAt = date('Y-m-d H:i:s', strtotime('+' . ($sessionConfig['lifetime'] ?? 86400) . ' seconds'));

    $stmt = $pdo->prepare("
        INSERT INTO user_sessions (session_id, user_id, project_id, expires_at, ip_address, user_agent)
        VALUES (?, ?, ?, ?, ?, ?)
    ");
    $stmt->execute([
        $sessionId,
        $user['user_id'],
        $projectId,
        $expiresAt,
        $_SERVER['REMOTE_ADDR'] ?? null,
        $_SERVER['HTTP_USER_AGENT'] ?? null
    ]);

    // Start PHP session and store info
    session_start();
    $sessionName = $sessionConfig['name'] ?? 'heataq_session';
    $_SESSION[$sessionName . '_session_id'] = $sessionId;
    $_SESSION[$sessionName . '_user_id'] = $user['user_id'];
    $_SESSION[$sessionName . '_project_id'] = $projectId;
    $_SESSION[$sessionName . '_site_id'] = $projectAccess['site_id'];

    echo json_encode([
        'success' => true,
        'session_id' => $sessionId,
        'project_name' => $projectAccess['project_name'],
        'site_id' => $projectAccess['site_id'],
        'user_name' => $user['name'],
        'role' => $projectAccess['role']
    ]);

} catch (Exception $e) {
    http_response_code(500);
    echo json_encode(['success' => false, 'message' => 'Server error: ' . $e->getMessage()]);
}
