<?php
/**
 * HeatAQ Login API
 * Version: 2.1 - Uses pool_site_id (INT) instead of VARCHAR site_id
 * Handles user authentication and session management
 *
 * Usage:
 * POST with email + password → Returns projects list + last_project_id (+ force_password_change flag)
 * POST with email + password + new_password → Changes password first if force_password_change
 * POST with email + password + project → Creates session, returns session_id
 *
 * Database requirements:
 * - users table needs: force_password_change TINYINT(1) DEFAULT 1
 * - users table needs: password_history JSON (stores last 5 hashed passwords)
 *
 * Note: pool_site_id is the INT primary key from pool_sites table (linked via project_id)
 * The VARCHAR site_id column was removed in migration 027.
 */

require_once __DIR__ . '/config.php';

header('Content-Type: application/json');
header('Access-Control-Allow-Origin: *');
header('Access-Control-Allow-Methods: POST, OPTIONS');
header('Access-Control-Allow-Headers: Content-Type');

if ($_SERVER['REQUEST_METHOD'] === 'OPTIONS') {
    exit(0);
}

if ($_SERVER['REQUEST_METHOD'] !== 'POST') {
    http_response_code(405);
    echo json_encode(['success' => false, 'message' => 'Method not allowed']);
    exit;
}

// Password history settings
define('PASSWORD_HISTORY_COUNT', 5);  // Remember last 5 passwords

try {
    $pdo = Config::getDatabase();
    $sessionConfig = Config::getSessionConfig();

    // Get input
    $email = $_POST['email'] ?? '';
    $password = $_POST['password'] ?? '';
    $projectId = $_POST['project'] ?? null;
    $newPassword = $_POST['new_password'] ?? null;

    if (empty($email) || empty($password)) {
        echo json_encode(['success' => false, 'message' => 'Email and password required']);
        exit;
    }

    // Validate user credentials
    $stmt = $pdo->prepare("
        SELECT user_id, email, name, password_hash, is_active, is_super_admin,
               force_password_change, password_history
        FROM users
        WHERE email = ?
    ");
    $stmt->execute([$email]);
    $user = $stmt->fetch(PDO::FETCH_ASSOC);

    if (!$user || !password_verify($password, $user['password_hash'])) {
        echo json_encode(['success' => false, 'message' => 'Invalid email or password']);
        exit;
    }

    if (!$user['is_active']) {
        echo json_encode(['success' => false, 'message' => 'Account is deactivated']);
        exit;
    }

    // Handle password change if required
    $forcePasswordChange = (bool)($user['force_password_change'] ?? false);

    if ($forcePasswordChange && $newPassword) {
        // Validate new password
        if (strlen($newPassword) < 8) {
            echo json_encode(['success' => false, 'message' => 'Password must be at least 8 characters']);
            exit;
        }

        // Check if new password is same as current
        if (password_verify($newPassword, $user['password_hash'])) {
            echo json_encode(['success' => false, 'message' => 'New password must be different from current password']);
            exit;
        }

        // Check password history (prevent reuse of last N passwords)
        $passwordHistory = json_decode($user['password_history'] ?? '[]', true) ?: [];
        foreach ($passwordHistory as $oldHash) {
            if (password_verify($newPassword, $oldHash)) {
                echo json_encode(['success' => false, 'message' => 'Cannot reuse a recent password. Please choose a different password.']);
                exit;
            }
        }

        // Check for similar passwords (new password contains old or vice versa)
        // Only check if passwords are somewhat similar length
        if (strlen($newPassword) >= 4 && strlen($password) >= 4) {
            $newLower = strtolower($newPassword);
            $oldLower = strtolower($password);
            if (strpos($newLower, $oldLower) !== false || strpos($oldLower, $newLower) !== false) {
                echo json_encode(['success' => false, 'message' => 'New password is too similar to the old password']);
                exit;
            }
        }

        // Update password history (keep last N passwords)
        array_unshift($passwordHistory, $user['password_hash']);
        $passwordHistory = array_slice($passwordHistory, 0, PASSWORD_HISTORY_COUNT);

        // Hash new password and update
        $newHash = password_hash($newPassword, PASSWORD_DEFAULT);
        $stmt = $pdo->prepare("
            UPDATE users
            SET password_hash = ?,
                force_password_change = 0,
                password_history = ?,
                updated_at = NOW()
            WHERE user_id = ?
        ");
        $stmt->execute([$newHash, json_encode($passwordHistory), $user['user_id']]);

        // Update password variable for session creation
        $password = $newPassword;
        $forcePasswordChange = false;

        // Re-fetch user to get updated data
        $stmt = $pdo->prepare("SELECT * FROM users WHERE user_id = ?");
        $stmt->execute([$user['user_id']]);
        $user = $stmt->fetch(PDO::FETCH_ASSOC);
    }

    // Step 1: Return projects list (no project selected yet)
    if (!$projectId) {
        // Get user's projects (pool_site_id from pool_sites via project_id)
        $stmt = $pdo->prepare("
            SELECT p.project_id, p.project_name, ps.id as pool_site_id, up.role
            FROM user_projects up
            JOIN projects p ON up.project_id = p.project_id
            LEFT JOIN pool_sites ps ON ps.project_id = p.project_id
            WHERE up.user_id = ? AND p.is_active = 1
            ORDER BY p.project_name
        ");
        $stmt->execute([$user['user_id']]);
        $projects = $stmt->fetchAll(PDO::FETCH_ASSOC);

        // If super admin, show all projects
        if ($user['is_super_admin']) {
            $stmt = $pdo->query("
                SELECT p.project_id, p.project_name, ps.id as pool_site_id, 'owner' as role
                FROM projects p
                LEFT JOIN pool_sites ps ON ps.project_id = p.project_id
                WHERE p.is_active = 1
                ORDER BY p.project_name
            ");
            $projects = $stmt->fetchAll(PDO::FETCH_ASSOC);
        }

        // Get user's last project preference (for cross-device sync)
        $lastProjectId = null;
        try {
            $stmt = $pdo->prepare("
                SELECT pref_value
                FROM user_preferences
                WHERE user_id = ? AND pref_key = 'last_project_id'
            ");
            $stmt->execute([$user['user_id']]);
            $lastProjectId = $stmt->fetchColumn();
        } catch (Exception $e) {
            // Table might not exist yet, ignore
        }

        // Return with force_password_change flag if still required
        echo json_encode([
            'success' => true,
            'projects' => $projects,
            'last_project_id' => $lastProjectId,
            'user_name' => $user['name'],
            'user_id' => $user['user_id'],
            'force_password_change' => $forcePasswordChange
        ]);
        exit;
    }

    // Step 2: Create session for selected project
    $projectId = (int)$projectId;

    // Verify user has access to this project (pool_site_id from pool_sites)
    $stmt = $pdo->prepare("
        SELECT up.role, p.project_name, ps.id as pool_site_id
        FROM user_projects up
        JOIN projects p ON up.project_id = p.project_id
        LEFT JOIN pool_sites ps ON ps.project_id = p.project_id
        WHERE up.user_id = ? AND up.project_id = ? AND p.is_active = 1
    ");
    $stmt->execute([$user['user_id'], $projectId]);
    $projectAccess = $stmt->fetch(PDO::FETCH_ASSOC);

    // Super admin can access any project
    if (!$projectAccess && $user['is_super_admin']) {
        $stmt = $pdo->prepare("
            SELECT 'owner' as role, p.project_name, ps.id as pool_site_id
            FROM projects p
            LEFT JOIN pool_sites ps ON ps.project_id = p.project_id
            WHERE p.project_id = ? AND p.is_active = 1
        ");
        $stmt->execute([$projectId]);
        $projectAccess = $stmt->fetch(PDO::FETCH_ASSOC);
    }

    if (!$projectAccess) {
        echo json_encode(['success' => false, 'message' => 'Access denied to this project']);
        exit;
    }

    // Create session
    $sessionId = bin2hex(random_bytes(32));
    $expiresAt = date('Y-m-d H:i:s', strtotime('+' . ($sessionConfig['lifetime'] ?? 86400) . ' seconds'));

    $stmt = $pdo->prepare("
        INSERT INTO user_sessions (session_id, user_id, project_id, expires_at, ip_address, user_agent)
        VALUES (?, ?, ?, ?, ?, ?)
    ");
    $stmt->execute([
        $sessionId,
        $user['user_id'],
        $projectId,
        $expiresAt,
        $_SERVER['REMOTE_ADDR'] ?? null,
        $_SERVER['HTTP_USER_AGENT'] ?? null
    ]);

    // Start PHP session and store info
    session_start();
    $sessionName = $sessionConfig['name'] ?? 'heataq_session';
    $_SESSION[$sessionName . '_session_id'] = $sessionId;
    $_SESSION[$sessionName . '_user_id'] = $user['user_id'];
    $_SESSION[$sessionName . '_project_id'] = $projectId;
    $_SESSION[$sessionName . '_pool_site_id'] = $projectAccess['pool_site_id'];

    echo json_encode([
        'success' => true,
        'session_id' => $sessionId,
        'project_name' => $projectAccess['project_name'],
        'pool_site_id' => $projectAccess['pool_site_id'],
        'user_name' => $user['name'],
        'role' => $projectAccess['role']
    ]);

} catch (Exception $e) {
    http_response_code(500);
    echo json_encode(['success' => false, 'message' => 'Server error: ' . $e->getMessage()]);
}
